[Unit]
Description=Sensey Garden Client - Garden sensor data collector
After=network.target
Wants=network.target

[Service]
Type=simple
User=pi
Group=pi
WorkingDirectory=/home/pi/sensey/sensey_client
ExecStart=/usr/bin/python3 garden_sensey.py
Restart=always
RestartSec=10
StandardOutput=journal
StandardError=journal
SyslogIdentifier=sensey-client-garden

# Security hardening
NoNewPrivileges=true
PrivateTmp=true
ProtectSystem=strict
ReadWritePaths=/home/pi/sensey/sensey_client
ProtectHome=true

[Install]
WantedBy=multi-user.target